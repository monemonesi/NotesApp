<UserControl x:Class="NotesApp.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <StackPanel Margin="10">
        <TextBlock x:Name="titleTextBlock" FontSize="12" FontWeight="Bold"
                   Text=""/>
        <TextBlock x:Name="editedTextBlock" FontSize="10"
                   Foreground="LightBlue"
                   FontStyle="Italic" 
                   Margin=" 0 5 0 0"
                   Text=""/>
        <TextBlock x:Name="contentTextBlock" FontSize="10" Margin="0 5 0 0"
                   TextWrapping="Wrap"
                   Text=""/>
    </StackPanel>
</UserControl>
